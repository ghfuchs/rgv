= form_for @order do |f|
  -if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :restaurant_id
    = f.text_field :restaurant_id
  .field
    = f.label :customer_id
    = f.text_field :customer_id
  .actions
    = f.submit 'Save'
