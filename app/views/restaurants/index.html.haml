%h1 Listing restaurants
%table
  %tr
    %th Name
    %th Description
    %th Address
    %th City
    %th State
    %th Zipcode
    %th Mon. Hours
    %th Tue. Hours
    %th Wed. Hours
    %th Thu. Hours
    %th Fri. Hours
    %th Sat. Hours
    %th Sun. Hours
    %th Logo
    %th Pickup
    %th Delivery
    %th Min delivery
    %th Delivery fee
    %th Website
    %th
    %th
    %th
  - @restaurants.each do |restaurant|
    %tr
      %td= restaurant.name
      %td= restaurant.description
      %td= restaurant.address
      %td= restaurant.city
      %td= restaurant.state
      %td= restaurant.zipcode
      %td= restaurant.mon_hours
      %td= restaurant.tue_hours
      %td= restaurant.wed_hours
      %td= restaurant.thu_hours
      %td= restaurant.fri_hours
      %td= restaurant.sat_hours
      %td= restaurant.sun_hours
      %td= image_tag(restaurant.logo)
      %td= restaurant.pickup
      %td= restaurant.delivery
      %td= number_to_currency(restaurant.min_delivery)
      %td= number_to_currency(restaurant.delivery_fee)
      %td= restaurant.website
      %td= link_to 'Reviews', restaurant
      %td= link_to 'Order', index_public_restaurant_menus_path(restaurant)
%br/
