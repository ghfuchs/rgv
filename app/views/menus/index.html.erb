<h1>Listing menus</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Image</th>
    <th>Qty</th>
    <th>Price</th>
    <th>Sp price</th>
    <th>Prep time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @menus.each do |menu| %>
  <tr>
    <td><%= menu.description %></td>
    <td><%= menu.image %></td>
    <td><%= menu.qty %></td>
    <td><%= menu.price %></td>
    <td><%= menu.sp_price %></td>
    <td><%= menu.prep_time %></td>
    <td><%= link_to 'Show', menu %></td>
    <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
    <td><%= link_to 'Destroy', menu, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

